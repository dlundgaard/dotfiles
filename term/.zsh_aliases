
# naming useful directories
export TRASH="$HOME/.trash"

 #setting aliases
alias grep="grep --color"
alias ll="ls -alhr --color -t"
alias rm="rm -i"
alias mv="mv -i"
alias lg="lazygit"
alias ff="fzf"

serve() {
    port=${1:-80}
    sudo python3 -m http.server $port
}

# custom functions
trash() {
    mkdir -p $TRASH_CAN
    echo ""$1" -> $TRASH_CAN"
    mv -t $TRASH_CAN $1
}

# download sound from youtube-video to spotify local files
tospotify()
{
    yt-dlp -x --audio-format m4a --audio-quality 0 --embed-thumbnail --add-metadata -P "~/OneDrive/Music" "$1"
}

disk_usage() {
    du -hd0 "$1"
}

cut_video() {
    ffmpeg -i "$1" -ss $2 -to $3 -c:v copy -c:a copy $4.mp4
}

pagecount() {
    pdftotext "$1" - | echo "$(expr $(wc -m) / 2400) (standard) pages"
}

ucloud() {
    code --folder-uri vscode-remote://ssh-remote+ucloud@ssh.cloud.sdu.dk:$1/work/
}
