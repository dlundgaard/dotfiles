alias grep="grep --color"
alias ll="ls -alhr --color -t"
alias rm="rm -i"
alias mv="mv -i"
alias gits="git status"
alias gitc="git commit"
alias gitp="git push"
alias lg="lazygit"
alias ff="fzf"
export TRASH_CAN="$HOME/.trash"

trash() {
    mkdir -p $TRASH_CAN
    echo ""$1" -> $TRASH_CAN"
    mv -t $TRASH_CAN $1
}

serve() {
    port=${1:-80}
    sudo python3 -m http.server $port
}

tospotify() {
    yt-dlp -x --audio-format m4a --audio-quality 0 --embed-thumbnail --add-metadata -P "~/OneDrive/Music" "$1"
}

disk_usage() {
    du -hd0 "$1"
}

cut_video() {
    ffmpeg -i "$1" -ss $2 -to $3 -c:v copy -c:a copy $4.mp4
}

pagecount() {
    pdftotext "$1" - | echo "$(expr $(wc -m) / 2400) (standard) pages"
}
